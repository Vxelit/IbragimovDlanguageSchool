<Window x:Class="languageSchool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:languageSchool"
        mc:Ignorable="d"
        Height="450" Width="800"
        MinHeight="450" MinWidth="800"
        Icon="school_logo.ico" FontFamily="Comic Sans MS" Background="#FFE7FABF"
        Title="ИбрагимовД Лангуаге">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

        <Image Source="school_logo.png" HorizontalAlignment="Left"></Image>
        <TextBlock Text="Ибрагимов Д. Лангуаге" HorizontalAlignment="Center" FontSize="24" VerticalAlignment="Center"></TextBlock>

        <Button Content="Назад" Name="BtnBack" Click="BtnBack_Click" Background="#FF04A0FF" VerticalAlignment="Center" HorizontalAlignment="Right"/>

        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered" Grid.Row="1"></Frame>
        
    </Grid>
</Window>
